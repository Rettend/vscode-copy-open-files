{
  "publisher": "Rettend",
  "name": "vscode-copy-open-files",
  "displayName": "vscode-copy-open-files",
  "type": "module",
  "version": "0.1.0",
  "private": true,
  "packageManager": "bun@1.3.2",
  "description": "Copy the contents of all open files",
  "repository": {
    "type": "git",
    "url": "https://github.com/rettend/vscode-copy-open-files"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.cjs",
  "engines": {
    "vscode": "1.104.0"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "commands": [
      {
        "command": "vscode-copy-open-files.copyAllOpenFiles",
        "title": "Copy All Open Files",
        "category": "Copy Open Files"
      },
      {
        "command": "vscode-copy-open-files.copyDirectoryStructure",
        "title": "Copy Directory Structure",
        "category": "Copy Open Files"
      },
      {
        "command": "vscode-copy-open-files.showCopyOptionsPanel",
        "title": "Configure & Copy Open Files",
        "category": "Copy Open Files"
      },
      {
        "command": "vscode-copy-open-files.copyImportList",
        "title": "Copy Import List (Open Files)",
        "category": "Copy Open Files"
      },
      {
        "command": "vscode-copy-open-files.importOpenFilesFromClipboard",
        "title": "Import Open Files from Clipboard",
        "category": "Copy Open Files"
      }
    ],
    "keybindings": [
      {
        "command": "vscode-copy-open-files.copyAllOpenFiles",
        "key": "ctrl+k ctrl+c",
        "mac": "cmd+k cmd+c",
        "when": "editorTextFocus || resourceScheme == 'file'"
      },
      {
        "command": "vscode-copy-open-files.showCopyOptionsPanel",
        "key": "ctrl+alt+d",
        "mac": "cmd+alt+d",
        "when": "editorTextFocus || resourceScheme == 'file'"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "vscode-copy-open-files.copyDirectoryStructure",
          "when": "explorerResourceIsFolder",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "bun run build",
    "build": "tsdown",
    "check": "tsgo -p tsconfig.json --noEmit",
    "lint": "eslint . --fix",
    "update": "taze latest -wr",
    "package": "vsce package --no-dependencies",
    "release": "bumpp && bun run package"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^6.2.0",
    "@types/bun": "^1.3.2",
    "@types/vscode": "1.104.0",
    "@typescript/native-preview": "^7.0.0-dev.20251108.1",
    "@vscode/vsce": "^3.7.0",
    "bumpp": "^10.3.1",
    "eslint": "^9.39.1",
    "ignore": "^7.0.5",
    "taze": "^19.9.0",
    "tsdown": "latest",
    "typescript": "^5.9.3"
  },
  "trustedDependencies": [
    "@vscode/vsce-sign"
  ]
}
